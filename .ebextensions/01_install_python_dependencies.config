# Install Python dependencies during deployment
# container_commands run in the container after the app is extracted
# This ensures Python packages are available when the app starts

container_commands:
  01_install_python_deps:
    command: "python3 -m pip install --user -r requirements.txt"
    ignoreErrors: false
  02_verify_python_deps:
    command: "python3 -c 'import requests; import bs4; print(\"Dependencies OK\")'"
    ignoreErrors: false

